<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <title>Books Filter</title>
    <style>
        body {
            font-family: Arial;
            padding: 20px;
        }

        form {
            display: grid;
            gap: 10px;
            max-width: 400px;
        }

        input,
        select,
        button {
            padding: 8px;
        }
    </style>
</head>

<body>

    <h2>Search & Filter Books</h2>

    <!-- GET request -->
    <form action="/api/books" method="GET">

        <!-- text search -->
        <input type="text" name="search" placeholder="Search book name / description" />

        <!-- author -->
        <input type="text" name="author" placeholder="Author name" />

        <!-- date range -->
        <label>From date</label>
        <input type="date" name="from" />

        <label>To date</label>
        <input type="date" name="to" />

        <!-- sorting -->
        <select name="sortBy">
            <option value="publishDate">Publish Date</option>
            <option value="name">Book Name</option>
            <option value="author">Author</option>
        </select>

        <select name="order">
            <option value="desc">Descending</option>
            <option value="asc">Ascending</option>
        </select>

        <!-- pagination -->
        <input type="number" name="page" placeholder="Page number" value="1" min="1" />

        <input type="number" name="limit" placeholder="Limit" value="10" min="1" max="50" />

        <button type="submit">Get Books</button>
    </form>

</body>

</html>